<head>
	<title>Testing Functions</title>
</head>
<body>
	<script>
		function capitalize(str) {
			return str.charAt(0).toUpperCase() + str.slice(1).toLowerCase();
		}

	
		console.log(capitalize("KETSIA")); 
		console.log(capitalize("ketsia")); 
		console.log(capitalize("kEtSiA")); 
	</script>
</body>
</html>
